{
  "manifest_version": 3,
  "name": "Tab Sync",
  "version": "1.0",
  "description": "Sync tabs to Google Drive",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon_16.png",
      "48": "img/icon_48.png",
      "128": "img/icon_128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "persistent": true
  },
  "permissions": [
    "storage",
    "tabs",
    "identity",
    "https://www.googleapis.com/",
    "https://www.googleapis.com/auth/drive.file"
  ]
}
